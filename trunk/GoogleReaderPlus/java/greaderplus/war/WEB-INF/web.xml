<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>ReplacerServlet</servlet-name>
		<servlet-class>com.pitaso.readerplus.service.ReplacerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FaviconsServlet</servlet-name>
		<servlet-class>com.pitaso.readerplus.service.FaviconsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LDRFullFeedServlet</servlet-name>
		<servlet-class>com.pitaso.readerplus.service.LDRFullFeedServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>QueueRecacheServlet</servlet-name>
		<servlet-class>com.pitaso.readerplus.service.QueueRecacheServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CronRecacheServlet</servlet-name>
		<servlet-class>com.pitaso.readerplus.service.CronRecacheServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReplacerServlet</servlet-name>
		<url-pattern>/Replacer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FaviconsServlet</servlet-name>
		<url-pattern>/Favicons</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LDRFullFeedServlet</servlet-name>
		<url-pattern>/LDRFullFeed</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QueueRecacheServlet</servlet-name>
		<url-pattern>/queue/recache</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CronRecacheServlet</servlet-name>
		<url-pattern>/cron/recache</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/queue/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
